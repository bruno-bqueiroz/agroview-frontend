{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "jsx": "react-jsx",             // <— permite JSX sem importar React manualmente
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["vite/client", "react", "react-dom"]  // <— carrega os tipos React e Vite
  },
  "include": ["src"]
}
